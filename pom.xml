  <pluginRepositories>
    <pluginRepository>
      <id>codehaus</id>
      <name>Codehaus Plugin Repository</name>
      <url>http://snapshots.repository.codehaus.org</url>
      <layout>default</layout>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
    </pluginRepository>
    <!-- crap4j plugin-->
    <pluginRepository>
        <id>jmd.sf.net</id>
        <url>http://jmd.sf.net/m2repository</url>
        <snapshots>
          <enabled>true</enabled>
        </snapshots>
